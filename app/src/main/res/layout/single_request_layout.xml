<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:background="?android:selectableItemBackground"
		app:cardCornerRadius="10dp"
		app:cardElevation="2dp"
		android:layout_margin="@dimen/layout_margin_5dp"
		>
	<RelativeLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
		
		<androidx.cardview.widget.CardView
				android:id="@+id/cardView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/layout_margin_10dp"
				android:background="@drawable/background_left"
				android:elevation="5dp"
				app:cardCornerRadius="20dp"
				>
		
		<ImageView
				android:id="@+id/request_user_image"
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:src="@drawable/no_image"
				/>
		
		</androidx.cardview.widget.CardView>
		
		<TextView
				android:id="@+id/request_user_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Name"
				android:layout_below="@+id/cardView"
				android:layout_marginTop="@dimen/layout_margin_10dp"
				android:layout_alignParentLeft="true"
				android:gravity="center"
				android:textColor="@color/black"
				/>
		
		<LinearLayout
				android:gravity="center"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/request_user_name"
				>
			
			<Button
					android:background="@drawable/buttonshape"
					android:textColor="@color/white"
					android:textAllCaps="false"
					android:text="Accept"
					android:layout_margin="@dimen/layout_margin_20dp"
					android:layout_weight="1"
					android:layout_gravity="center"
					android:id="@+id/request_user_accept_btn"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:visibility="gone"
					/>
			
			<Button
					android:background="@drawable/buttonshape"
					android:textColor="@color/white"
					android:textAllCaps="false"
					android:text="Remove"
					android:layout_margin="@dimen/layout_margin_20dp"
					android:layout_weight="1"
					android:layout_gravity="center"
					android:id="@+id/request_user_reject_btn"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:visibility="gone"
					/>
		
		</LinearLayout>
	
	
	</RelativeLayout>
	
	
</androidx.cardview.widget.CardView>